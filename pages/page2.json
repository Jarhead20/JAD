{
  "page": {
    "bg_color": "#000000"
  },
  "channels": {
    "rpm_k": { "source": "rpm", "scale": 0.001, "clamp": [0, 9] },
    "rpm_norm": { "source": "rpm", "ratio_to": "max_rpm", "clamp": [0, 1], "ema": 0.2 },
    "fuel_pct": { "source": "fuel_l", "ratio_to": "fuel_capacity_l", "clamp": [0, 1], "ema": 0.2 }
  },
  "elements": [
    {
      "type": "round_gauge",
      "x": 170, "y": 380, "width": 320, "height": 320, "centered": true,
      "label": "RPM x1000", "font_size": 20,
      "max_val": 9.0, "redline": 8.0,
      "channel": "rpm_k"
    },
    {
      "type": "linear_gauge",
      "x": 780, "y": 420, "width": 220, "height": 120, "centered": false,
      "label": "Fuel", "font_size": 18,
      "max_val": 1.0,
      "channel": "fuel_pct"
    },
    {
      "type": "text",
      "x": 512, "y": 60, "width": 300, "height": 110, "centered": true,
      "text": "JAD",               
      "fmt": "{value}",               
      "font_px": 72, "bold": true
    },
    {
      "type": "image",
      "x": 512, "y": 300, "width": 200, "height": 200,
      "centered": true,
      "path": "assets/BMW.svg",
      "mode": "contain",
      "align": "center",
      "opacity": 1.0,
      "rotation": 0,
      "bg_color": "transparent"
    }
  ]
}
